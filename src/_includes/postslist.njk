<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <article class="hidden" style="--order: {{ loop.index }}">
      <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
      <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }} by {{ post.data.author }}</time>
      <p class="postlist-description">{{ post.data.description }}</p>
      <a href="{{ post.url | url }}" class="postlist-readmore">Read more</a>
    </article>
  </li>
{% endfor %}
</ol>